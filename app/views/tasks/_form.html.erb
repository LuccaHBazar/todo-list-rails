<%= form_with model: [ @task_list, task ], local: true do |form| %>
  <% if task.errors.any? %>
    <div>
      <% task.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.submit 'Add Task' %>
  </div>
<% end %>