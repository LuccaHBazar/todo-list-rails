<%= form_with model: @task_list do |form| %>

    <% if form.object.errors.any? %>
        <div>
        <% form.object.errors.full_messages.each do |message| %>
            <div><%= message %> </div>
        <% end %>
        </div>
    <% end %>

    <div>
        <%= form.label :name%>
        <%= form.text_field :name%>
        <%= form.button%>
    </div>

<%end%>